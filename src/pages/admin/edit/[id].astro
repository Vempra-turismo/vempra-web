---
import AdminLayout from '@/layouts/AdminLayout.astro';
import db from '@/lib/turso';

const { id } = Astro.params;
const isNew = id === 'new' || id === undefined;

let trip: any = {};
let tripTagNames: string[] = [];

// Obtener todas las opciones para los menús desplegables y casillas de verificación
const { rows: localities } = await db.execute("SELECT id, name FROM localities ORDER BY name");
const { rows: departures } = await db.execute("SELECT id, name FROM departures ORDER BY name");
const { rows: allTags } = await db.execute("SELECT id, name FROM tags ORDER BY name");

if (!isNew) {
    const result = await db.execute({
        sql: `
            SELECT t.*, GROUP_CONCAT(tags.name) as tag_names
            FROM trips t
            LEFT JOIN trip_tags tt ON t.id = tt.trip_id
            LEFT JOIN tags ON tt.tag_id = tags.id
            WHERE t.id = ?
            GROUP BY t.id
        `,
        args: [id]
    });
    if (result.rows.length > 0) {
        trip = result.rows[0];
        tripTagNames = trip.tag_names ? trip.tag_names.split(',') : [];
    } else {
        return Astro.redirect('/admin/viajes?error=not_found');
    }
}
---
<AdminLayout title={isNew ? 'Añadir Nuevo Viaje' : `Editar Viaje`}>
    <h1 class="text-3xl font-bold mb-6">{isNew ? 'Añadir Nuevo Viaje' : `Editar: ${trip.title}`}</h1>

    <form method="POST" action="/api/trips/save" enctype="multipart/form-data" class="space-y-8 bg-white p-8 rounded-lg shadow-md">
        
        {!isNew && <input type="hidden" name="id" value={trip.id} />}
        {!isNew && <input type="hidden" name="imageUrl" value={trip.imageUrl} />}

        <!-- Título y URL -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label for="title" class="block text-sm font-medium text-gray-700">Título del Viaje</label>
                <input type="text" name="title" id="title" value={trip.title || ''} required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
            </div>
            <div>
                <label for="url" class="block text-sm font-medium text-gray-700">URL (ej: peru-magico)</label>
                <input type="text" name="url" id="url" value={trip.url || ''} required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
            </div>
        </div>

        <!-- Slogan -->
        <div>
            <label for="slogan" class="block text-sm font-medium text-gray-700">Slogan / Frase Corta</label>
            <input type="text" name="slogan" id="slogan" value={trip.slogan || ''} class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
        </div>

        <!-- Precio y Duración -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label for="price" class="block text-sm font-medium text-gray-700">Precio (USD)</label>
                <input type="number" name="price" id="price" value={trip.price || ''} required step="0.01" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
            </div>
            <div>
                <label for="days" class="block text-sm font-medium text-gray-700">Duración (ej: 10 Días)</label>
                <input type="text" name="days" id="days" value={trip.days || ''} required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
            </div>
        </div>

        <!-- Imagen Principal -->
        <div>
            <label for="imageFile" class="block text-sm font-medium text-gray-700">Imagen Principal</label>
            <input type="file" name="imageFile" id="imageFile" accept="image/*" class="mt-1 block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-primary-50 file:text-primary-700 hover:file:bg-primary-100">
            {!isNew && trip.imageUrl && (
                <div class="mt-4">
                    <p class="text-sm text-gray-600">Imagen actual:</p>
                    <img src={trip.imageUrl} alt="Imagen actual del viaje" class="mt-2 h-32 w-auto rounded-lg shadow-md" />
                    <p class="text-xs text-gray-500 mt-1">Para reemplazarla, simplemente sube una nueva imagen.</p>
                </div>
            )}
        </div>

        <!-- Localidad y Salida -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label for="locality_id" class="block text-sm font-medium text-gray-700">Localidad Principal</label>
                <select name="locality_id" id="locality_id" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                    <option value="">Seleccionar...</option>
                    {localities.map((loc: any) => <option value={loc.id} selected={loc.id === trip.locality_id}>{loc.name}</option>)}
                </select>
            </div>
            <div>
                <label for="departure_id" class="block text-sm font-medium text-gray-700">Lugar de Salida</label>
                <select name="departure_id" id="departure_id" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                    <option value="">Seleccionar...</option>
                    {departures.map((dep: any) => <option value={dep.id} selected={dep.id === trip.departure_id}>{dep.name}</option>)}
                </select>
            </div>
        </div>

        <!-- Tipo de Viaje y Temporada -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
                <label for="travel_type" class="block text-sm font-medium text-gray-700">Tipo de Viaje</label>
                <select name="travel_type" id="travel_type" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
                    <option value="Grupal" selected={trip.travel_type === 'Grupal'}>Grupal</option>
                    <option value="Personalizado" selected={trip.travel_type === 'Personalizado'}>Personalizado</option>
                </select>
            </div>
            <div>
                <label for="season_name" class="block text-sm font-medium text-gray-700">Temporada (Nombre)</label>
                <input type="text" name="season_name" id="season_name" value={trip.season_name || ''} placeholder="Verano" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
            </div>
            <div>
                <label for="season_year" class="block text-sm font-medium text-gray-700">Temporada (Año)</label>
                <input type="number" name="season_year" id="season_year" value={trip.season_year || ''} placeholder="2024" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm">
            </div>
        </div>

        <!-- Etiquetas -->
        <div>
            <h3 class="text-sm font-medium text-gray-700">Etiquetas</h3>
            <p class="text-xs text-gray-500 mb-2">Selecciona las etiquetas que aplican a este viaje.</p>
            <div class="mt-2 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 p-4 border rounded-lg">
                {allTags.map((tag: any) => (
                    <label class="flex items-center space-x-3 cursor-pointer">
                        <input type="checkbox" name="tags" value={tag.name} checked={tripTagNames.includes(tag.name)} class="h-4 w-4 rounded border-gray-300 text-primary focus:ring-primary">
                        <span class="text-sm text-gray-700">{tag.name}</span>
                    </label>
                ))}
            </div>
        </div>

        <div class="flex justify-end pt-4 border-t">
            <a href="/admin/viajes" class="bg-gray-200 text-gray-700 font-bold py-2 px-6 rounded-lg hover:bg-gray-300 transition-colors mr-4">Cancelar</a>
            <button type="submit" class="bg-primary text-white font-bold py-2 px-6 rounded-lg hover:bg-opacity-90 transition-colors">
                {isNew ? 'Crear Viaje' : 'Guardar Cambios'}
            </button>
        </div>
    </form>
</AdminLayout>