---
interface Props {
  text: string;
  url: string;
  variant?: 'primary' | 'secondary';
  className?: string;
}

const { text, url, variant = 'primary', className } = Astro.props;

const baseClasses = "px-8 py-4 rounded-full font-bold text-lg transition-transform duration-300 transform hover:scale-105 shadow-lg";

const variantClasses = {
  primary: "bg-primary text-white hover:bg-primary-dark",
  secondary: "bg-secondary text-white hover:bg-secondary-dark",
};
---

<a href={url} class:list={[baseClasses, variantClasses[variant], className]}>
  {text}
</a>
